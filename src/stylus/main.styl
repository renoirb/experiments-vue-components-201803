$color-pack = false

$body-bg-light = #f1f2f7
$body-font-family = 'Arial'
$alert-font-size = 18px

$theme := {
  primary: #2C3E50,
  secondary: #95a5a6,
  accent: #f2a200,
  error: #E74C3C,
  warning: #F39C12,
  info: #3498DB,
  success: #18BC9C,
  hotpink: #ff69b4,
}

